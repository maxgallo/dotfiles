{
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "es6": true,
        "node" : true
    },
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "semi": 0,
        "no-unused-vars": [ 1, {"args": "after-used", "varsIgnorePattern": "Inferno"} ],
        "react/jsx-uses-vars": "error",
        "no-console" : 0
    }
}
